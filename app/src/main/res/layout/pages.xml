                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="0"/>

            <Button
                android:id="@+id/slidecolorsdown"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_expand_more_black_24dp" />
        </LinearLayout>
    </LinearLayout>
