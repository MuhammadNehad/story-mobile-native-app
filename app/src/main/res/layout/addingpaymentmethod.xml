<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#DCDCDC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="Select Method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"/>

    <Spinner
            android:background="@drawable/imgstyle"

        android:id="@+id/paytype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/payspinnercont" />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/paypalForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Payment"
            android:textSize="30dp"
            android:gravity="center"/>

        <EditText
            android:layout_width="200dp"
            android:background="@drawable/normaledittextsty"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
            android:layout_width="100dp"
            android:background="@drawable/normaledittextsty"
            android:layout_height="40dp" android:layout_gravity="center"
            android:layout_margin="10dp"/>
            <EditText
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:background="@drawable/normaledittextsty"
            android:layout_height="40dp" android:layout_gravity="center" /></LinearLayout>
            <EditText
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:background="@drawable/normaledittextsty"
            android:layout_height="40dp" android:layout_gravity="center" />
            <EditText
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:background="@drawable/normaledittextsty"
            android:layout_height="40dp" android:layout_gravity="center" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="20dp"
            android:layout_gravity="right"/></LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>