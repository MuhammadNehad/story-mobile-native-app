<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AliceBlue"
    tools:context="mainproject.mainroject.story.signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/White"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/applicationnewlogo" />

        <EditText
            android:id="@+id/UserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="UserName"
            android:inputType="text"
            android:padding="3dp" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="YourName"
            android:inputType="textPersonName"
            android:padding="3dp" />

        <EditText
            android:id="@+id/email_sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:padding="3dp" />

        <EditText
            android:id="@+id/passwordsp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="3dp" />

        <EditText
            android:id="@+id/confirpasswordsp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="ConfirmPassword"
            android:inputType="textPassword"
            android:padding="3dp" />

        <TextView
            android:id="@+id/birthdate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:ems="10"
            android:hint="@string/birthdate"
            android:onClick="showDatePiker"
            android:padding="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:onClick="gotoLogin"
            android:text="If you Have Account, click here"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/errormsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Bisque" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/check_agreementBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="By clicking this, you accept Our Privacies Policies" />

            <CheckBox
                android:id="@+id/disclaimerBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="By clicking this, you accept Our Disclaimer" />
        </LinearLayout>

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="5dp"
            android:background="#FF0000"
            android:text="SignUp" />
    </LinearLayout>
</RelativeLayout>
