            <Button
                android:id="@+id/submitStory"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/preparing_strybtns"
                android:text="@string/publish" />

            <EditText
                android:id="@+id/pricebox"
                android:layout_width="100dp"
